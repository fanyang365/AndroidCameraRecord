<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bunchen.camencode"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="28" />

    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:testOnly="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        <activity android:name="com.van.camencode.CameraXActivity" >
        </activity>
        <activity
            android:name="com.van.camencode.TestActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" />
        <activity android:name="com.van.camencode.Camera2Activity" >
        </activity>
        <activity
            android:name="com.van.camencode.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.van.camencode.SurfaceTextureActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.van.camencode.RecordActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.van.camencode.CameraYUVOpenGL"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.van.camencode.WellcomActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.van.camencode.OpenglCameraActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.van.camencode.OpenglCameraActivity2"
            android:label="@string/app_name" >
        </activity>

        <provider
            android:name="androidx.camera.camera2.impl.Camera2Initializer"
            android:authorities="com.bunchen.camencode.camerax-init"
            android:exported="false"
            android:initOrder="100"
            android:multiprocess="true" />
    </application>

</manifest>